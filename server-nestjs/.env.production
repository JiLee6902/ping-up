# Application
NODE_ENV=production
APP_PORT=4000
NOTIFICATION_PORT=4001
CRONJOB_PORT=4002

# Database - PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=pingup_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=pingup
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# JWT
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_256_BITS
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_SECURE_REFRESH_SECRET_256_BITS
JWT_ACCESS_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=pingup
KAFKA_CONSUMER_GROUP=pingup-group
KAFKA_TOPIC_NOTIFICATIONS=notifications
KAFKA_TOPIC_MESSAGES=messages

# AWS S3
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_S3_BUCKET=pingup-uploads
AWS_PUBLIC_URL_BASE=https://pingup-uploads.s3.ap-southeast-1.amazonaws.com

# ImageKit
IMAGEKIT_PUBLIC_KEY=CHANGE_ME_IMAGEKIT_PUBLIC_KEY
IMAGEKIT_PRIVATE_KEY=CHANGE_ME_IMAGEKIT_PRIVATE_KEY
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-id

# File Upload Limits
MAX_IMAGE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# Email (Gmail SMTP)
GMAIL_USER=CHANGE_ME_EMAIL
GMAIL_APP_PASS=CHANGE_ME_APP_PASSWORD

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# Docker Registry
REGISTRY=pingup
VERSION=latest
