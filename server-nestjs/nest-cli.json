{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": "apps/app-api",
  "projects": {
    "app-api": {
      "type": "application",
      "root": "apps/app-api",
      "entryFile": "main",
      "sourceRoot": "apps/app-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-api/tsconfig.app.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    },
    "cronjob-worker": {
      "type": "application",
      "root": "apps/cronjob-worker",
      "entryFile": "main",
      "sourceRoot": "apps/cronjob-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cronjob-worker/tsconfig.app.json"
      }
    },
    "entity": {
      "type": "library",
      "root": "libs/entity",
      "entryFile": "index",
      "sourceRoot": "libs/entity/src",
      "compilerOptions": {
        "tsConfigPath": "libs/entity/tsconfig.lib.json"
      }
    },
    "enum": {
      "type": "library",
      "root": "libs/enum",
      "entryFile": "index",
      "sourceRoot": "libs/enum/src",
      "compilerOptions": {
        "tsConfigPath": "libs/enum/tsconfig.lib.json"
      }
    },
    "shared-libs": {
      "type": "library",
      "root": "libs/shared-libs",
      "entryFile": "index",
      "sourceRoot": "libs/shared-libs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared-libs/tsconfig.lib.json"
      }
    },
    "external-infra": {
      "type": "library",
      "root": "libs/external-infra",
      "entryFile": "index",
      "sourceRoot": "libs/external-infra/src",
      "compilerOptions": {
        "tsConfigPath": "libs/external-infra/tsconfig.lib.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    }
  }
}
